<div class="container">
  <h1 class="mb-3">New game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letter text-center align-self-center"><span><%= letter %></span></div>
    <% end %>
  </div>

  <p class="mt-3">What is the longest word you can find?</p>
  <form action="<%= score_path %>" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word">
    <input type="submit" value="Play">
  </form>
</div>
